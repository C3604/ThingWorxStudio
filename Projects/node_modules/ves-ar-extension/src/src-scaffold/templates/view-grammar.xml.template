<grammar xml:lang="en-US" root="rootRule" tag-format="semantics/1.0" version="1.0" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="rootRule">
      <one-of>
        <item><ruleref uri="#cmds"/></item>
        <item><ruleref uri="#help"/></item>
      </one-of>
  </rule>

  <rule id="help">
    <item>
      help
    </item>
    <item>
      <one-of>
        <item>
          <tag>
            out.command="help"; out.response="Available Experience commands are: %%help%%.  Say help followed by the command name for detailed info";
          </tag>
        <ruleref special="NULL"/></item>
        <item>
          <tag>
            out.command="help"; out.response=rules.cmds.help;
          </tag>
        <ruleref uri="#cmds"/></item>
      </one-of>
    </item>
  </rule>

  <rule id="cmds">
    <one-of>
      <!-- current top level actions (operators) -->
    </one-of>
  </rule>

</grammar>