<!--
Create tabs with an icon and label, using the tabs-positive style.
Each tab's child <ion-nav-view> directive will have its own
navigation history that also transitions its views in and out.
-->
<ion-tabs class="tabs-color-active-positive tabs-icon-top">

{% for v in views %}
  {% if v.showInMainMenu %}
  <ion-tab title="<%= v.title =%>" icon="<%= v.menuIcon =%>" ui-sref="tab.<%= v.fileName =%>">
    <ion-nav-view name="<%= v.fileName =%>"></ion-nav-view>
  </ion-tab>
  {% endif %}
{% endfor %}


</ion-tabs>
